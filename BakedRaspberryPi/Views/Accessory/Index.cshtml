@model BakedRaspberryPi.Models.AccessoriesCases

@{
    ViewBag.Title = "A La Mode your Pi";
    bool isAccessoryEdit = false;
    bool isCaseEdit = false;
    
    foreach (var accessory in Model.Accessories)
    {
        if (accessory.IsEdit == true)
        {
            isAccessoryEdit = true;
        }
    }

    foreach (var piCase in Model.Cases)
    {
        if (piCase.IsEdit == true)
        {
            isCaseEdit = true;
        }
    }

    }

@using (Html.BeginForm())
{
    @Html.Partial("_currentPiWidget")

    if (!isCaseEdit)
    {
        @Html.Partial("_accessories", Model.Accessories)
    }
    
    if (!isAccessoryEdit)
    {
        @Html.Partial("_piCases", Model.Cases)
    }
}
