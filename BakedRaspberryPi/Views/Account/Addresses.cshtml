@model IEnumerable<Braintree.Address>
@{
    ViewBag.Title = "Addresses";
}
<div class="row">
    <div class="col-xs-5 col-xs-offset-1 assembledPiPanel">
        <h2>Add An Address</h2>
        @using (Html.BeginForm("AddAddress", "Account"))
        {
            <div class="form-group">
                <label class="control-label" for="firstName">First Name</label>
                <input class="form-control" type="text" name="firstName" />
            </div>
            <div class="form-group">
                <label class="control-label" for="lastName">Last Name</label>
                <input class="form-control" type="text" name="lastName" />
            </div>

            <div class="form-group">
                <label class="control-label" for="company">Company</label>
                <input class="form-control" type="text" name="company" />
            </div>
            <div class="form-group">
                <label class="control-label" for="streetAddress">Street</label>
                <input class="form-control" type="text" name="streetAddress" />
            </div>
            <div class="form-group">
                <label class="control-label" for="extendedAddress">Apartment/Suite/Unit</label>
                <input class="form-control" type="text" name="extendedAddress" />
            </div>
            <div class="form-group">
                <label class="control-label" for="locality">City</label>
                <input class="form-control" type="text" name="locality" />
            </div>
            <div class="form-group">
                <label class="control-label" for="region">State</label>
                <input class="form-control" type="text" name="region" />
            </div>
            <div class="form-group">
                <label class="control-label" for="postalCode">Zip Code</label>
                <input class="form-control" type="text" name="postalCode" />
            </div>
            <div class="form-group">
                <label class="control-label" for="countryName">Country</label>
                <input class="form-control" type="text" name="countryName" placeholder="United States of America" />
            </div>
            <input type="submit" value="Add Address" class="btn btn-primary" />
        }
    </div>


    @if (Model.Any())
    {

    <div class="col-xs-5 col-xs-offset-1 assembledPiPanel">
        @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
}
        <h2>Saved Addresses</h2>
        @foreach (var address in Model)
    {
        <hr />
        <span>@address.FirstName @address.LastName</span>
        <br />
        <span>@address.Company</span>
        <br />
        <span>@address.StreetAddress @address.ExtendedAddress</span>
        <br />
        <span>@address.Locality, @address.Region @address.PostalCode</span>
        <br />
        <span>@address.CountryName</span>
        <br />
        @Html.ActionLink("Delete Address", "DeleteAddress", new { id = address.Id }, new { @class = "btn btn-danger" })

}
    </div>

    }
    else
    {
    <div class="col-xs-5 col-xs-offset-1 assembledPiPanel">
        @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
}
        <h2>You Have No Saved Addresses</h2>
    </div>
    }
</div>


