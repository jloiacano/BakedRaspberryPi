@model BakedRaspberryPi.Models.Cart

@{ 
    int ID = 0;

    try
    {
        if (Model.CurrentIndex.ToString() == "")
        {
            Model.CurrentIndex = 0;
            Model.CurrentPis[0] = new BakedRaspberryPi.Models.WholePi();
        }
        else
        {
            ID = Model.CurrentPis.Length;
        }
    }
    catch (NullReferenceException)
    {
        ID = 0;
        Model.CurrentPis[0] = new BakedRaspberryPi.Models.WholePi();
        Model.CurrentIndex = ID;
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Baked Raspberry Pi's</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Baked Raspberry Pi's", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- TODO figure out how to change "Model" below to a currentWholePi Index from the cart depending on which WholePi is being edited -->
    @Html.Partial("_currentWholePi", Model.CurrentPis[ID])

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - Loiacano Designs</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
