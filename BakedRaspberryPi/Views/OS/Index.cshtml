@model IEnumerable<BakedRaspberryPi.Models.OS>



@{
    ViewBag.Title = "Fill Your Pi";
}

@using (Html.BeginForm())
{
    <div class="stickyUnderNavBar">
        <input type="submit" class="btn btn-primary" value="Add this to your baked Pi" />
        <!--TODO make the button below add a null OS to the current whole Pi-->
        <input type="submit" class="btn btn-default" value="No filling in my Pi, thank you.'" />
    </div>


    <div class="row">
        @foreach (var os in Model)
        {
            <div class="col-xs-12">
                <div class="well">
                    <div class="row">
                        <div class="col-xs-1">
                            @Html.RadioButton("id", os.Id)
                        </div>
                        <div class="col-xs-4">
                            <img src="@os.Image" class="img-responsive" />
                        </div>
                        <div class="col-xs-7">
                            <h2>@os.Name</h2>
                            <p>@os.Description</p>
                            <hr />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}


